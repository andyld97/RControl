<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
	  <AssemblyVersion>1.0.4</AssemblyVersion>
	  <Title>RControlLib</Title>
	  <Copyright>Code A sSoftware @ 2023</Copyright>
	  <PackageProjectUrl>https://github.com/andyld97/RControl</PackageProjectUrl>
	  <RepositoryUrl>https://github.com/andyld97/RControl</RepositoryUrl>
	  <PackageTags>8 Port Relaycard</PackageTags>
	  <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
	  <GenerateDocumentationFile>True</GenerateDocumentationFile>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
	  <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
	  <FileVersion>1.0.4</FileVersion>
	  <Version>1.0.1</Version>
	  <Description>A library which you can use to send commands/retrieve info using a Conrad 8-channel relay card. </Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.Ports" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
